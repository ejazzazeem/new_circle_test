{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "allowJs": true,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@angular/*": [
        "../node_modules/@angular/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "preserveWhitespaces": false,
    "baseUrl": "app"
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
